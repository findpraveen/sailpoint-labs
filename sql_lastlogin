SELECT A.ID, ExtractValue(A.attributes, '/Attributes/Map/entry[@key="last_login"]/@value') as lastLogin,za.name as appName, za.type as apptype FROM spt_application za, spt_link A WHERE A.application IN (SELECT app.id FROM spt_application app JOIN (     SELECT application,  COUNT(*) AS total_accounts,            SUM(CASE WHEN STR_TO_DATE(ExtractValue(attributes, '/Attributes/Map/entry[@key="last_login"]/@value'), '%d/%m/%Y') = DATE_SUB(CURDATE(), INTERVAL 88 DAY) THEN 1 ELSE 0 END) AS before_88_days_count     FROM spt_link  GROUP BY application ) aa ON app.id = aa.application WHERE      (total_accounts < 50 AND before_88_days_count > 2)     OR      (total_accounts >= 50 AND before_88_days_count > 2)) AND STR_TO_DATE(ExtractValue(A.attributes, '/Attributes/Map/entry[@key="last_login"]/@value'), '%d/%m/%Y') = DATE_SUB(CURDATE(), INTERVAL 88 DAY) AND za.type="Servicenow" AND za.id=A.application;
